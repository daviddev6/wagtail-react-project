{
  "parser": "./node_modules/babel-eslint/lib/index.js",
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "no-console": "off",
    "react/prop-types": [0, { "ignore": [] }],
    "react/require-default-props": [1, { "forbidDefaultForRequired": true }],
    "react/forbid-prop-types": [1]
  },
  "plugins": ["react", "prettier", "import", "jsx-a11y"],
  "extends": [
    "airbnb",
    "prettier",
    "prettier/react",
    "plugin:import/errors",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "jest": true
  }
}
